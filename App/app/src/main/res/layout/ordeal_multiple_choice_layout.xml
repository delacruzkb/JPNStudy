<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ordeal_answer_area_height"
    android:gravity="center"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/ordeal_multiple_choice_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/ordeal_multiple_choice_radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ordeal_multiple_choice_button_height"
            android:autoSizeTextType="uniform"
            android:onClick="multipleChoiceButtonPressed"
            android:text="Button" />

        <RadioButton
            android:id="@+id/ordeal_multiple_choice_radio_button_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ordeal_multiple_choice_button_height"
            android:autoSizeTextType="uniform"
            android:onClick="multipleChoiceButtonPressed"
            android:text="Button" />

        <RadioButton
            android:id="@+id/ordeal_multiple_choice_radio_button_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ordeal_multiple_choice_button_height"
            android:autoSizeTextType="uniform"
            android:onClick="multipleChoiceButtonPressed"
            android:text="Button" />

        <RadioButton
            android:id="@+id/ordeal_multiple_choice_radio_button_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ordeal_multiple_choice_button_height"
            android:autoSizeTextType="uniform"
            android:onClick="multipleChoiceButtonPressed"
            android:text="Button" />
    </RadioGroup>

</LinearLayout>