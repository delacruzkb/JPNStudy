<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jpnstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Dialogs.LessonMenuDialog"></activity>
        <activity
            android:name=".Pages.HomePage"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pages.LessonPage"
            android:parentActivityName=".Pages.HomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pages.HomePage" />
        </activity>
        <activity
            android:name=".Pages.ChallengePage"
            android:parentActivityName=".Pages.HomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pages.HomePage" />
        </activity>
        <activity
            android:name=".Pages.SettingsPage"
            android:parentActivityName=".Pages.HomePage"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pages.HomePage" />
        </activity>
        <activity
            android:name=".Pages.AddCardPage"
            android:parentActivityName=".Pages.SettingsPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pages.HomePage" />
        </activity>
        <activity
            android:name=".Pages.SearchPage"
            android:parentActivityName=".Pages.SettingsPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pages.HomePage" />
        </activity>
    </application>

</manifest>